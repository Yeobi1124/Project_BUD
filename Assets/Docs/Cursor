@startuml

class EditManager
{
    - selectedBlock : GameObject
    
    + IsEmpty() : bool
    + Summonable() : bool
    + Insert(object : GameObject) : void
    + Place(pos : Vector3) : void
    + Clear() : void
}

class Cursor
{
    + Interact() : void
    + Summon() : void
}

class Block
{
    + mode : Mode(InGame, Preview)
}

@enduml